{
    "page_type": "BMR_CHECKLIST",
    "document_metadata": {
        "document_type": "BMR REVIEW CHECKLIST",
        "company_name": "RISHABH METALS AND CHEMICALS PVT. LTD.",
        "document_title": "BMR REVIEW CHECKLIST",
        "stamp": "MASTER COPY",
        "pagination_pattern": "Page\\s*(\\d+)\\s*of\\s*(\\d+)"
    },
    "extraction_template": {
        "header_fields": {
            "DOCUMENT_NO": {
                "label": "DOCUMENT NO.",
                "regex": "DOCUMENT\\s*NO\\.?\\s*[:\\-|]?\\s*([^\\n|]+)",
                "type": "string"
            },
            "REVISION_NO": {
                "label": "REVISION NO.",
                "regex": "REVISION\\s*NO\\.?\\s*[:\\-|]?\\s*(\\d+)",
                "type": "string"
            },
            "EFFECTIVE_DATE": {
                "label": "EFFECTIVE DATE",
                "regex": "EFFECTIVE\\s*DATE\\s*[:\\-|]?\\s*(\\d{2}/\\d{2}/\\d{2,4})",
                "type": "date"
            },
            "REVIEW_DATE": {
                "label": "REVIEW DATE",
                "regex": "REVIEW\\s*DATE\\s*[:\\-|]?\\s*(\\d{2}/\\d{2}/\\d{2,4})",
                "type": "date"
            },
            "PAGE_INFO": {
                "label": "Page",
                "regex": "Page\\s*(\\d+\\s*of\\s*\\d+)",
                "type": "string"
            }
        },
        "tables": {
            "review_checklist": {
                "extract_all_columns": true,
                "dynamic_rows": true,
                "multi_page": true,
                "column_mapping": {
                    "sr_no": [
                        "Sr. No.",
                        "S.N."
                    ],
                    "review_points": [
                        "Review Points"
                    ],
                    "status": [
                        "Status (Yes / No / Na)",
                        "Status"
                    ]
                }
            },
            "attachments": {
                "section_header": "SECTION: - B",
                "extract_all_columns": true,
                "dynamic_rows": true,
                "column_mapping": {
                    "sr_no": [
                        "Sr. No.",
                        "S.N."
                    ],
                    "attachments": [
                        "Attachments"
                    ],
                    "status": [
                        "Status (Yes / No / NA)",
                        "Status"
                    ]
                }
            }
        },
        "table_config": {
            "extract_all_columns": true,
            "dynamic_rows": true,
            "header_identifier_keywords": [
                "Review Points",
                "Attachments",
                "Status",
                "Yes",
